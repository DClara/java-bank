<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Prompt -->
    <bean id="systemIn" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
        <property name="staticField" value="java.lang.System.in"></property>
    </bean>

    <bean id="systemOut" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
        <property name="staticField" value="java.lang.System.out"></property>
    </bean>

    <bean id="prompt" class="org.academiadecodigo.bootcamp.Prompt">
        <constructor-arg index="0" ref="systemIn"/>
        <constructor-arg index="1" ref="systemOut"/>
    </bean>

</beans>