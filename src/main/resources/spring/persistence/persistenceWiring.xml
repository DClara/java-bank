<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Enable support for JPA annotations -->
    <bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor"/>


    <bean id="emf" class="javax.persistence.EntityManagerFactory;"/>
    <bean id="em" class="javax.persistence.EntityManager;"/>

    <bean id="jpaSessionManager" class="org.academiadecodigo.javabank.persistence.jpa.JpaSessionManager">
        <property name="emf" ref="emf"/>
        <property name="em" ref="em"/>
    </bean>

    <bean id="transactionManager" class="org.academiadecodigo.javabank.persistence.jpa.JpaTransactionManager">
          <property name="sessionManager" ref="jpaSessionManager"/>
    </bean>

    <!-- Enable h2WebServer instantiation -->
    <bean id="h2WebServer" class="org.academiadecodigo.javabank.persistence.H2WebServer;"/>

    <!-- Dao's -->
    <bean id="jpaAccountDao" class="org.academiadecodigo.javabank.persistence.dao.jpa.JpaAccountDao">
        <property name="sm" ref="jpaSessionManager"></property>
    </bean>

    <bean id="jpaCustomerDao" class="org.academiadecodigo.javabank.persistence.dao.jpa.JpaCustomerDao">
        <property name="sm" ref="jpaSessionManager"></property>
    </bean>

    <!-- Services -->
    <bean id="accountService" class="org.academiadecodigo.javabank.services.AccountServiceImpl">
        <property name="accountDao" ref="jpaAccountDao"></property>
        <property name="tx" ref="transactionManager"></property>

    </bean>

    <bean id="customerService" class="org.academiadecodigo.javabank.services.CustomerServiceImpl">
        <property name="customerDao" ref="jpaCustomerDao"></property>
        <property name="tx" ref="transactionManager"></property>

    </bean>

    <bean id="authService" class="org.academiadecodigo.javabank.services.AuthServiceImpl">
        <property name="customerService" ref="customerService"></property>
    </bean>
    <!-- End of Services -->


    <bean id="accountFactory" class="org.academiadecodigo.javabank.factories.AccountFactory;"/>

    <bean id="controllerMap" class="java.util.HashMap"></bean>



    <!-- Controllers -->

    <bean id="loginController" class="org.academiadecodigo.javabank.controller.LoginController">
        <property name="authService" ref="authService"></property>
        <property name="view" ref="loginView"></property>
    </bean>

    <bean id="mainController" class="org.academiadecodigo.javabank.controller.MainController">
        <property name="authService" ref="authService"></property>
        <property name="view" ref="mainView"></property>
    </bean>

    <bean id="balanceController" class="org.academiadecodigo.javabank.controller.BalanceController">
        <property name="authService" ref="authService"></property>
        <property name="view" ref="balanceView"></property>
        <property name="customerService" ref="customerService"></property>
    </bean>

    <bean id="newAccountController" class="org.academiadecodigo.javabank.controller.NewAccountController">
        <property name="authService" ref="authService"></property>
        <property name="view" ref="newAccountView"></property>
        <property name="accountService" ref="accountService"></property>
        <property name="accountFactory" ref="accountFactory"></property>

    </bean>

    <bean id="depositController" class="org.academiadecodigo.javabank.controller.transaction.DepositController">
        <property name="authService" ref="authService"></property>
        <property name="view" ref="accountTransactionView"></property>
        <property name="customerService" ref="customerService"></property>
        <property name="accountService" ref="accountService"></property>
    </bean>
    <bean id="withdrawController" class="org.academiadecodigo.javabank.controller.transaction.WithdrawalController">
        <property name="authService" ref="authService"></property>
        <property name="view" ref="accountTransactionView"></property>
        <property name="accountService" ref="accountService"></property>
        <property name="customerService" ref="customerService"></property>
    </bean>

    <!-- View -->

    <bean id="loginView" class="org.academiadecodigo.javabank.view.LoginView">
        <property name="loginController" ref="loginController"></property>
    </bean>

    <bean id="mainView" class="org.academiadecodigo.javabank.view.MainView">
        <property name="mainController" ref="mainController"></property>
    </bean>

    <bean id="balanceView" class="org.academiadecodigo.javabank.view.BalanceView">
        <property name="balanceController" ref="balanceController"></property>
    </bean>

    <bean id="newAccountView" class="org.academiadecodigo.javabank.view.NewAccountView">
        <property name="newAccountController" ref="newAccountController"></property>
    </bean>

    <bean id="accountTransactionView" class="org.academiadecodigo.javabank.view.AccountTransactionView">
        <property name="transactionController" value="depositController"></property>
    </bean>








</beans>